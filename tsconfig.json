{
   "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "baseUrl": ".",
        "typeRoots" : [
            "node_modules/@types",
            "types"
        ],
        "declaration": true,
        "declarationDir": "types",
        "paths": {
            "randexp": ["types/randexp.d.ts"]
        }
   },
   "include": [
        "src/**/*", "types/randexp.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}